		"@types/node": "^16.4.0",
		"@vitejs/plugin-react-refresh": "^1.3.5",
		"concurrently": "^6.2.0",
		"jest": "^27.0.6",
		"ts-jest": "^27.0.3",
		"typescript": "^4.3.5",
		"vite": "^2.4.3"
	},
	"keywords": [
		"react",
		"dark-mode",
		"next.js",
