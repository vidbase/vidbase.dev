{
	"name": "next-prefers-theme",
	"version": "0.0.0-alpha1",
	"description": "Next.js css media query prefers-* system preference detection & theming.",
	"license": "MIT",
	"author": "Van Nguyen <thegoleffect@gmail.com>",
	"main": "./dist/index.umd.js",
	"module": "./dist/index.es.js",
	"types": "./@types/index.d.ts",
	"files": [
		"dist",
		"@types"
	],
	"scripts": {
		"dev": "vite",
		"start": "vite preview",
		"test": "jest",
		"build": "vite build --config vite.config-build.ts && $npm_execpath run tsc",
		"build:watch": "vite build --config vite.config-build.ts --watch",
		"types": "tsc",
		"types:watch": "tsc --watch",
		"watch": "concurrently \"$npm_execpath run build:watch\" \"$npm_execpath run types:watch\""
	},
	"dependencies": {},
	"peerDependencies": {
		"next": "*",
		"react": "*",
		"react-dom": "*"
